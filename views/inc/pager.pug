nav.pager-wrapper.mb-5
	ul.pagination.justify-content-center
		li.page-item
			a.page-link(href='/book')
				span 처음
		if pager.prevPager
			li.page-item
				a.page-link(href=`/book/list/${pager.prevPager}`)
					span &laquo;
		else 
			li.page-item.disabled
				a.page-link(href='#')
					span &laquo;
		if pager.prevPage
			li.page-item
				a.page-link(href=`/book/list/${pager.prevPage}`)
					span &lt;
		else 
			li.page-item.disabled
				a.page-link(href='#')
					span &lt;
		- for(var i=pager.startIdx; i<=pager.endIdx; i++)
			if pager.page == i
				li.page-item.active
					a.page-link(href=`/book/list/${i}`)= i
			else 
				li.page-item
					a.page-link(href=`/book/list/${i}`)= i
		if pager.nextPage
			li.page-item
				a.page-link(href=`/book/list/${pager.nextPage}`)
					span &gt;
		else
			li.page-item.disabled
				a.page-link(href='#')
					span &gt;
		if pager.nextPager
			li.page-item
				a.page-link(href=`/book/list/${pager.nextPager}`)
					span &raquo;
		else
			li.page-item.disabled
				a.page-link(href='#')
					span &raquo;
		li.page-item
			a.page-link(href=`/book/list/${pager.lastPage}`)
				span 마지막